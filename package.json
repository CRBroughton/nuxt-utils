{
  "name": "@crbroughton/nuxt-utils",
  "version": "0.1.0",
  "description": "A collection of useful nuxt utilities and composables",
  "author": "Craig R Broughton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crbroughton/nuxt-utils.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run prepack && npm publish --access=public && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "changeset": "npx @changesets/cli",
    "changeset:status": "npx @changesets/cli status --verbose",
    "changeset:version": "npx @changesets/cli version"
  },
  "dependencies": {
    "@nuxt/kit": "^3.16.2",
    "@vueuse/core": "^13.2.0",
    "@vueuse/motion": "^3.0.3",
    "@vueuse/nuxt": "^13.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@nuxt/devtools": "^2.3.2",
    "@nuxt/eslint-config": "^1.3.0",
    "@nuxt/module-builder": "^1.0.1",
    "@nuxt/schema": "^3.16.2",
    "@nuxt/test-utils": "^3.17.2",
    "@types/node": "latest",
    "@vue/test-utils": "^2.4.6",
    "changelogen": "^0.6.1",
    "eslint": "^9.24.0",
    "happy-dom": "^17.4.4",
    "nuxt": "^3.16.2",
    "playwright-core": "^1.52.0",
    "typescript": "~5.8.3",
    "vitest": "^3.1.2",
    "vue-tsc": "^2.2.8"
  }
}
